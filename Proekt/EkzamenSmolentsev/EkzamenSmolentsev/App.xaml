<Application x:Class="EkzamenSmolentsev.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EkzamenSmolentsev"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextOsnovnoi" TargetType="Label" >
            <Setter Property="FontFamily" Value="Tw Cen MT Condensed Extra Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="Knopki" TargetType="Button">
            <Setter Property="FontFamily" Value="Gill Sans Ultra Bold"/>
            <Setter Property="Background" Value="#FFFF3A00" />
        </Style>
    </Application.Resources>
</Application>
